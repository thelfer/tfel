find_program(PANDOC NAMES pandoc pandoc.exe)
find_program(PANDOC_CITEPROC NAMES pandoc-citeproc pandoc-citeproc.exe)
find_program(PANDOC_CROSSREF NAMES pandoc-crossref pandoc-crossref.exe)
mark_as_advanced(PANDOC)
mark_as_advanced(PANDOC_CITEPROC)
mark_as_advanced(PANDOC_CROSSREF)
if(PANDOC AND PANDOC_CITEPROC AND PANDOC_CROSSREF)
  message(STATUS "Enabling generation of documentation based on pandoc")
  set(HAVE_PANDOC ON)
elseif(PANDOC AND PANDOC_CITEPROC AND PANDOC_CROSSREF)
  message(STATUS "Disabling generation of documentation based on pandoc")
  set(HAVE_PANDOC OFF)
endif(PANDOC AND PANDOC_CITEPROC AND PANDOC_CROSSREF)

if(PANDOC)
  message(STATUS "pandoc:          ${PANDOC}")
elseif(PANDOC)
  message(STATUS "pandoc:          not found")
endif(PANDOC)
if(PANDOC_CITEPROC)
  message(STATUS "pandoc-citeproc: ${PANDOC_CITEPROC}")
elseif(PANDOC_CITEPROC)
  message(STATUS "pandoc-citeproc: not found")
endif(PANDOC_CITEPROC)
if(PANDOC_CROSSREF)
  message(STATUS "pandoc-crossref: ${PANDOC_CROSSREF}")
elseif(PANDOC_CROSSREF)
  message(STATUS "pandoc-crossref: not found")
endif(PANDOC_CROSSREF)
