namespace tfel {

  namespace math {

    template <unsigned short N,
              unsigned short Mn,
              unsigned short Mm,
              unsigned short In,
              unsigned short Im,
              typename T>
    struct TVectorFromTinyMatrixColumnView2Expr {
    };  // end of struct TVectorFromTinyMatrixColumnView2Expr

    template <unsigned short N,
              unsigned short Mn,
              unsigned short Mm,
              unsigned short In,
              unsigned short Im,
              typename T>
    struct TvectorExpr<
        tvector<N, T>,
        TVectorFromTinyMatrixColumnView2Expr<N, Mn, Mm, In, Im, T>>
        : public TvectorConcept<TvectorExpr<
              tvector<N, T>,
              TVectorFromTinyMatrixColumnView2Expr<N, Mn, Mm, In, Im, T>>>,
          public tvector_base<
              TvectorExpr<
                  tvector<N, T>,
                  TVectorFromTinyMatrixColumnView2Expr<N, Mn, Mm, In, Im, T>>,
              N,
              T> {
      typedef EmptyRunTimeProperties RunTimeProperties;

      RunTimeProperties getRunTimeProperties() const {
        return RunTimeProperties();
      }

      TvectorExpr(tmatrix<Mn, Mm, T>& m_,
                  const unsigned short i_,
                  const unsigned short j_)
          : m(m_), oi(i_), oj(j_) {}  // end of TvectorExpr

      const T& operator()(const unsigned short i) const {
        return this->m(In + (this->oi) * N + i, Im + this->oj);
      }  // end of operator() const

      T& operator()(const unsigned short i) {
        return this->m(In + (this->oi) * N + i, Im + this->oj);
      }  // end of operator()

      const T& operator[](const unsigned short i) const {
        return this->m(In + (this->oi) * N + i, Im + this->oj);
      }  // end of operator[] const

      T& operator[](const unsigned short i) {
        return this->m(In + (this->oi) * N + i, Im + this->oj);
      }  // end of operator[]

      using tvector_base<TvectorExpr>::operator=;

     protected:
      tmatrix<Mn, Mm, T>& m;
      const unsigned short oi;
      const unsigned short oj;

     private:
      //! simple checks
      TFEL_STATIC_ASSERT((N == 1u) || (N == 2u) || (N == 3u));
      //! simple checks
      TFEL_STATIC_ASSERT((Im < Mm));
      //! simple checks
      TFEL_STATIC_ASSERT(N<=Mn-In));

    };  // end of struct TvectorExpr

    template <unsigned short N,
              unsigned short Mn,
              unsigned short Mm,
              unsigned short In,
              unsigned short Im,
              typename T = double>
    struct TVectorFromTinyMatrixColumnView2 {
      typedef TvectorExpr<
          tvector<N, T>,
          TVectorFromTinyMatrixColumnView2Expr<N, Mn, Mm, In, Im, T>>
          type;
    };  // end of struct TVectorFromTinyMatrixColumnView2

  }  // end of namespace math

}  // end of namespace tfel

#endif /* LIB_TFEL_MATH_TVECTORFROMTINYMATRIXCOLUMNVIEW2_HXX */
