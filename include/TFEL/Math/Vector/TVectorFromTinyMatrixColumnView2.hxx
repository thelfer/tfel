#ifndef LIB_TFEL_MATH_TVECTORFROMTINYMATRIXCOLUMNVIEW2_HXX
#define LIB_TFEL_MATH_TVECTORFROMTINYMATRIXCOLUMNVIEW2_HXX

#include "TFEL/Metaprogramming/StaticAssert.hxx"
